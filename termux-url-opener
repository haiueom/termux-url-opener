#!/data/data/com.termux/files/usr/bin/bash

url="$1"
path="-o ~/storage/downloads/termux/%(title)s.%(ext)s"

echo "\nShare link: $url"
echo "1: Download mp4 (video)"
echo "2: Download mp3 (audio)"
echo "3: Download with wget"
echo "x: Exit"

read -p "Select menu: " option
case $option in
	1)
  	yt-dlp $path -f 'bestvideo[height<=?1080]+bestaudio/best' --merge-output-format 'mp4' $1
  	;;
	2)
  	yt-dlp $path -f 'bestaudio' -x --audio-format --audio-quality 0 'mp3' $1
  	;;
	3)
    cd  ~/storage/downloads/termux/wget
  	wget $1
	  ;;
	x)
    echo "bye . . .
  	break
  	;;
esac 
